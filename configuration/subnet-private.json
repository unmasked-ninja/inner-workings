{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Application Private Subnet",
  
  "Parameters": {
    "VPC_ID": {
      "Description": "The VPC to create this subnet in",
      "Type": "String"
    },
    "AVAILABLILITY_ZONE": {
      "Description": "The availability zone for this subnet",
      "Type": "String",
      "Default": { "Fn:Select": [ "0", { "Fn:GetAZs": "" } ] },
      "AllowedValues": { "Fn:GetAZs": "" }
    },
    "CIDR_BLOCK": {
      "Description": "The CIDR block for the subnet",
      "Type": "String",
      "Default": "10.0.100.0/24",
      "AllowedValues": [
        "10.0.100.0/24",
        "10.0.101.0/24",
        "10.0.102.0/24",
        "10.0.103.0/24",
        "10.1.100.0/24",
        "10.1.101.0/24",
        "10.1.102.0/24",
        "10.1.103.0/24",
        "10.2.100.0/24",
        "10.2.101.0/24",
        "10.2.102.0/24",
        "10.2.103.0/24"
      ],
      "ConstraintDescription": "must be a valid CIDR block which is part of our network plan"
    }
  },
  
  "Resources": {
    "PrivateSubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": { "Ref": "VPC_ID" },
        "CidrBlock": { "Ref": "CIDR_BLOCK" },
        "AvailibilityZone": { "Ref": "AVAILABLITY_ZONE" },
        "Tags": [
          {
            "Key": "Network",
            "Value": "Private"
          }
        ]
      }
    }
  }
}
